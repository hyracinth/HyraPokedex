<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/mdb/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/mdb/css/mdb-free.min.css" rel="stylesheet">
    <link href="~/mdb/css/style.min.css" rel="stylesheet">
    <link href="~/hyra-pokedex.css" rel="stylesheet">
</head>
<body style="background-color:lightslategray">
    <!--Main Navigation-->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark scrolling-navbar stylish-color">
            <a class="navbar-brand" href="/Home/Index"><strong>HyraPokedex</strong></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/HyraPokedex/Index">Pokedex</a>
                    </li>
                </ul>
            </div>
        </nav>

    </header>
    <!--Main Navigation-->

    <div>
        @RenderBody()
    </div>

    <!--Footer-->
    <footer class="page-footer font-small fixed-bottom stylish-color">
        <div class="footer-copyright text-center py-3">
            © 2020 Copyright HyraPokedex
        </div>
    </footer>
    <!--Footer-->

    <script type="text/javascript" src="~/mdb/js/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/mdb/js/popper.min.js"></script>
    <script type="text/javascript" src="~/mdb/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/mdb/js/mdb.min.js"></script>
</body>

</html>
